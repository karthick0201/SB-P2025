	}

	private void printLoginList() {
		
		line();
		List<Login> loginList = loginDao.findAll();
		System.out.println(">>>>--------> PRINTING LOGIN RECORDS <-----------<<");
		loginList.forEach(ll -> ll.display());
		
		
		line();
	}
	private void line() {
		System.out.println("\n\n>>----------------------<<");
		System.out.println(">>----------------------<<\n\n");
		
	}
	
}
