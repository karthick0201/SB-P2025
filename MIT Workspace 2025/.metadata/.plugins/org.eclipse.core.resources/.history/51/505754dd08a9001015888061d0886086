package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.data.domain.Page;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.entity.Product;
import com.service.ProductService;

@Controller
public class ProductController {

	
	@Autowired
	private ProductService productService;
	
	@Value("${supermarket.pageSize}")
	private int pageSize;

	@GetMapping(value = "/products")
	public String showProducts(ModelMap modelMap) {
		
		System.out.println(">>------| Landed showProducts Controller Method...");
		return showProductsByPage(1, "ASC", "productName",modelMap);
		
	}
	
	@GetMapping(value = "/products/{pageNo}")
	public String showProductsByPage(@PathVariable("pageNo")int pageNo,
									@RequestParam("sortDirection")String sortDirection,
									@RequestParam("sortField")String sortBy,
									ModelMap modelMap) {
		
		System.out.println(">>------| Landed showProductsByPage Controller Method...");
		
		String str = String.format("PageNo : %d, SortDirection : %s, sortBy : %s, PageSize : %d", pageNo,sortDirection,sortBy,pageSize);
		System.out.println(str);

		Page<Product> productPage = productService.getProducts(pageNo, pageSize, sortBy, sortDirection);
		
		List<Product> productList = productPage.getContent();
		
		System.out.println(">>---> Product List : " );

		productList.forEach(p -> System.out.println(p));
		
		/* 1. Titile */
		String title = "CDPShop Products List";
		
		/* 2. pageNo */
		
		/* 3. Total Pages */
		int totalPages = productPage.getTotalPages(); // 6
		
		/* 4. Total Items */
		long totalItems = productPage.getTotalElements(); // 56
		
		/* 5. Reverse Sort Direction  
		 * 	- reverseSortDirection --> for column Click 
		 * 	- sortDirection --> Page 1,2,3 Next -> click usage
		 * 	- sortField --> which field to sort
		 * 	- 
		 * */
		String reverseSortDirection = sortDirection.equalsIgnoreCase("asc") ? "desc" : "asc";
		
		/* 6. add product list */
		
		/* add to model */
		modelMap.addAttribute("title",title);
		
		modelMap.addAttribute("currentPage",pageNo);
		modelMap.addAttribute("totalPages",totalPages);
		modelMap.addAttribute("totalItems",totalItems);
		
		modelMap.addAttribute("reverseSortDirection",reverseSortDirection);
		modelMap.addAttribute("sortDirection",sortDirection);
		modelMap.addAttribute("sortField",sortBy);
		
		
		modelMap.addAttribute("products",productList);
		
		
		return "view-products";
	}
	
	@ResponseBody
	@GetMapping(value = "show-products")
	public List<Product> ShowProductsResponsebody() {
		
		List<Product> productList = productService.getAllProducts();
		
		return productList;
		
	}
	
	
}
