package com.resources;

import java.util.List;
import java.util.Optional;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.binding.Customer;
import com.util.CustomerUtils;

@RestController // --> @ResponseBody + @Controller(Marks this class as spring bean)
@RequestMapping(value = "/api/customer")
public class CustomerResource {

	
	/* 1. Getting All Customers */
	@GetMapping(value = "/")
	public ResponseEntity<List<Customer>> customerHandler(){
		
		List<Customer> customerList = CustomerUtils.getCustomerList();
		
		return new ResponseEntity<>(customerList,HttpStatus.OK);
	}
	
	/* 2. Get Customer Using id */
	
	@GetMapping("/{customerId}")
	public ResponseEntity<?> customerHandler(@PathVariable("customerId")int id){
		
		//Get From DB/Utils
		List<Customer> customerList = CustomerUtils.getCustomerList();
		
		Optional<Customer> optionalCustomer = customerList.stream().filter(cus -> cus.getId() == id).findFirst();
		
		if(!optionalCustomer.isPresent()) {
			return new ResponseEntity<String>("Customer Id is not Found in Records", HttpStatus.Ok);
		}
		
		return new ResponseEntity<Customer>(optionalCustomer.get(),HttpStatus.OK);
		
	}
	/* 3. Update Customer */
	
	/* 4. Delete Customer */
}
