package com.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.dao.CustomerDao;
import com.entity.Customer;

@Service
public class CustomerServiceImpl implements CustomerService {

	
	@Autowired
	private CustomerDao customerDao;
	
	@Override
	public List<Customer> getAllCutomer() {
		
		 return customerDao.findAll();
	}

	@Override
	public Customer getCustomerById(int id) throws Exception {
		
		Optional<Customer> optionalCustomer =  customerDao.findById(id);
		
		if(optionalCustomer.isEmpty()) {
			throw new Exception("Customer With " + id + " is not found!!!"); // After Change to Custom Exception
		}
		
		return optionalCustomer.get();
		
	}

	@Override
	public Customer addCustomer(Customer customer) {
		
		Customer savedCustomer = customerDao.save(customer);
		
		System.out.println("~~~~~~~~~~~ SavedCustomer : " + savedCustomer);
		return savedCustomer;
	}

	@Override
	public boolean deleteCustomer(int id) {
		
		customerDao.deleteById(id);		
		
		return true;
	}

	@Override
	public List<Customer> addCustomer(List<Customer> customerList) {
		List<Customer> savedCustomerList = customerDao.saveAll(customerList);
		return savedCustomerList;
	}

}
