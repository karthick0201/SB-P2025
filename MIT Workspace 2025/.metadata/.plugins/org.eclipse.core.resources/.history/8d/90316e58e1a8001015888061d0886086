package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.data.domain.Page;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestParam;

import com.entity.Product;
import com.service.ProductService;

@Controller
public class ProductController {

	
	@Autowired
	private ProductService productService;
	
	@Value("${supermarket.pageSize}")
	private int pageSize;
	
	@GetMapping(value = "/products")
	public String getProudcts(int pageNo,int count,String sortDirection,String sortBy) {
		
		
		Page<Product> products = 
		
		List<Product> productsList = products.getContent();
		
		mav.addObject("products",productsList);
		
		return mav;
	}
	
	@GetMapping(value = "/products/{pageNo}")
	public String showProductsByPage(@PathVariable("pageNo")int pageNo,
									@RequestParam("sortDirection")String sortDirection,
									@RequestParam("sortField")String sortBy,
									ModelMap modelMap) {
		
		
		Page<Product> productPage = productService.getProducts(pageNo, pageSize, sortBy, sortDirection);
		
		List<Product> productList = productPage.getContent();
		
		modelMap.addAttribute("products",productList);
		
		
		return "show-products";
	}
	
	
	
}
