package com.mit.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import com.mit.dto.EnquiryDTO;
import com.mit.service.EnquiryService;


@Controller
public class EnquireController {

	
	@GetMapping(value = "/")
	public String enquiryForm(Model model) {
		
		model.addAttribute("enquiryForm",new EnquiryDTO());
		
		System.out.println(">> Landed Enquiery Form ");
		
		return "enquiryDetails";
	}
	
	
	@Autowired
	private EnquiryService enquiryService;
	
	@PostMapping(value = "/processEnquiry")
	public String processEnquiry(EnquiryDTO enquiryDto) {
		
		System.out.println("Enquiry Dto : " + enquiryDto);
		
		enquiryService.createEnquiry(enquiryDto);
		
		return "home";
		
	}
}
